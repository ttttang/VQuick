<!--Preserves sorting as well as searching-->
	<%=hidden_field_tag :direction, params[:direction]%>
	<%=hidden_field_tag :sort, params[:sort]%>
	<%=hidden_field_tag :search, params[:search]%>
	


<h1 class="viewhead">All Events</h1>
	

<!--Toggles between list view and items view-->

	
	<h5 class="toggle-events view-link toggleable-event-list">Table View</h5>
	<h5 class="toggle-events view-link toggleable-events">Item View</h5>

	<div class='toggleable-event-list'>
		<%=render 'events/partials/eventitems'%>
	</div>

	<div class='toggleable-events'>
		<%=render 'events/partials/eventtable'%>
	</div>
