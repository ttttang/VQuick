<ul class="alleventitems">
	<% @events.each do |event| %>
		<%=link_to (event) do%>
			<ul class="eventitem">
				<div class="eventbody">
				<li><h2><%=event.name%></h2></li>
					
						<li class="event-date"><span>Date:</span> <%=event.date_and_time%></li>
						<li class="event-description"><span>Description:</span> <%=event.description%></li>
					
						<li class="event-req"><span>Requirements:</span> <%=event.requirements%></li>
						<li class="event-org"><span>Organization:</span> <%=event.organization%></li>
	
				</div>
			</ul>
		<%end%>
	<%end%>
</ul>