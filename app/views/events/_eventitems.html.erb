<ul class="alleventitems">
	<% @events.each do |event| %>
		<%=link_to (event) do%>
			<ul class="eventitem">
				<div class="eventbody">
				<li><h2><%=event.name%> on <%=event.date_and_time.to_date.strftime("%B %d, %Y")%></h2></li>
					
						<li class="event-date"><span>Time:</span> <%=event.date_and_time.strftime("%I:%M %p")%> to <%=(event.date_and_time+event.hours.hours+event.minutes.minutes).strftime("%I:%M %p")%></li>
						<li class="event-description"><span>Description:</span> <%=event.description%></li>
					
						<li class="event-req"><span>Requirements:</span> <%=event.requirements%></li>
						<li class="event-org"><span>Organization:</span> <%=event.organization%></li>
	
				</div>
			</ul>

		<%end%>
	<%end%>
	<%=will_paginate @events%>
</ul>