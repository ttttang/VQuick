<%=render 'events/partials/event'%>

<%if current_user&&current_user.id==@event.created_by%>
	<%if !current_user.events.include?(@event)%>	
		<%=link_to "Attend event!", attendevent_path(:attend=>@event.id), :class=>"btn btn-default btnattendcolor-loggedin", data: { confirm: 'Click OK to confirm your attendance!'}%>
	<%end%>
	<%= link_to "Edit", edit_event_path(@event), :class=>"btn btn-default "%>
	<%= link_to "Delete", @event, :class=>"btn btn-default ", method: :delete %>
<%elsif current_user&&current_user.events.include?(@event)%>
	<p>Already attending event!</p>
	<%=link_to "View my events", myevents_path%>
 
<%elsif current_user%>
	<%=link_to "Attend event!", attendevent_path(:attend=>@event.id), :class=>"btn btn-default btnattendcolor", data: { confirm: 'Click OK to confirm your attendance!'}%>
<%else%>
	<p class="signin">Please sign in to attend event!</p>
<%end%>



  
