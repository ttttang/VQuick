
<%= form_for (@organization) do |f| %>
	<div class="field">
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</div>


	<div class="field">
		<%= f.label :phone %><br>
		<%= f.text_field :phone %>
	</div>

	<div class="field">
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</div>

	<div class="field web">
		<%= f.label :website %><br>
		http://	<%= f.text_field :website %>
	</div>

	<%if @organization.new_record?%>
		<div class="field">
			<%= f.label :code %><br>
			<%= f.text_field :code %>
		</div>
	<%end%>

	<div class="field-btn">
		<%= f.submit @organization.new_record? ? "New Organization" : "Create Organization" %>
	</div>
<% end %>
